<div class="container">
    <div class="row">
        <div class="col s10">
            <h1>Titles</h1>
            <table class="bordered highlight">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each model as |listing|}}
                        <tr class="titles-entry"
                            style="cursor: pointer;">
                            <td>{{#link-to 'title' listing.id}}
                                {{listing.title}}
                                {{/link-to}}
                            </td>
                            <td>{{listing.author}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col s2" style="margin-top: 40px;">
            {{#animated-tooltip}}
                <a class="btn-floating right btn-large waves-effect waves-light tooltipped"
                    data-position="left"
                    data-tooltip="Add New Title"
                    data-delay="50">
                    <i class="material-icons">add</i>
                </a>
            {{/animated-tooltip}}
        </div>
    </div>
</div>
